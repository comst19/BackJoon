package Gold;

import java.util.*;

class item{
	int w, v;
	public item(int w, int v) {
		this.w = w;
		this.v = v;
	}	
}

public class G5_12865 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt(); // 물건 개수
		int k = sc.nextInt(); // 가능 무게
		item[] items = new item[n];
		int[][] dp = new int[n][k+1];
		
		for(int i = 0; i < n; i++) {
			int w = sc.nextInt();
			int v = sc.nextInt();
			items[i] = new item(w,v);
		}
	
		for(int i = 0; i < n; i++) {
			for(int j = 1; j <= k; j++) {
				if(items[i].w > j) dp[i][j] = dp[i][j-1];
				else {
					dp[i][j] = Math.max(dp[i-1][j], dp[i-1][j-items[i].w]+items[i].v);
				}
			}
		}
		System.out.println(dp[n][k+1]);
		
	}

}
