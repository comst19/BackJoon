package Gold;

import java.util.*;

class Time implements Comparable<Time>{
	public int st, et;
	public Time(int st, int et) {
		this.st = st;
		this.et = et;
	}
	@Override
	public int compareTo(Time o) {
		// TODO Auto-generated method stub
		return this.et - o.et;
	}
	
	
}

class Seat{
	public int et,ch;
	public Seat(int et, int ch) {
		this.et = et;
		this.ch = ch;
	}
}

public class G3_12764 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		ArrayList<Time> arr = new ArrayList<>();
		ArrayList<Seat> seat = new ArrayList<>();
		int n = sc.nextInt();
		for(int i = 0; i < n; i++) {
			int st = sc.nextInt();
			int et = sc.nextInt();
			arr.add(new Time(st,et));
		}
		
		Collections.sort(arr);
		
		int cnt = 0;
		for(Time cur : arr) {
			boolean flag = false;
			if(cnt == 0) {
				cnt++;
				seat.add(new Seat(cur.et, 0));
			}else {
				int i = 0;
				for(Seat curSeat : seat) {
					if(cur.st > curSeat.et) {
						seat.set(i, new Time);
						flag = true;
						break;
					}
					i++;
				}
				if(!flag) {
					cnt++;
					seat.add(cur.et);
				}
				
			}
			
		}
		System.out.println(cnt);
	}

}
