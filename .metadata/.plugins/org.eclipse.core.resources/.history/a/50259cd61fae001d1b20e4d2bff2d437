package Silver;

import java.util.*;

public class S1_2156 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[] arr = new int[n+1];
		int[] dp = new int[n+1];
		
		for(int i = 1; i <= n; i++) {
			arr[i] = sc.nextInt();
		}
		dp[1] = arr[1];
		dp[2] = dp[1] + arr[2];
		for(int i = 3 ; i <= n; i++) {
			dp[i] = Math.max(dp[i-2] + arr[i], dp[i-1]);
		}
		
		System.out.println(dp[n]);
	}

}
