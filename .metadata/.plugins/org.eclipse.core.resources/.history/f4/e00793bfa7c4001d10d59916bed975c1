package Silver;

import java.util.*;

public class S2_2885 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		int k = sc.nextInt();
	
		int cnt = 0;
		while(true) {
			if(k <= Math.pow(2, cnt++)) break;
		}
		System.out.println(cnt);
	}

}
